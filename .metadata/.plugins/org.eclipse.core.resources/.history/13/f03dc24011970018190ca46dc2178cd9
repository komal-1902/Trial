		System.out.println("Enter name: ");
		String name = scan.nextLine();
		name = scan.next();
		System.out.println("Enter number of subjects for entering marks: ");
		int markSize = scan.nextInt();
		System.out.println("Enter marks for three subjects: ");
		int m1 = scan.nextInt();
		int m2 = scan.nextInt();
		int m3 = scan.nextInt();
		int[] marks = new int[] {m1, m2, m3};
		
