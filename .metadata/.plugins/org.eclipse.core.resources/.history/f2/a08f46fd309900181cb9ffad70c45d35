package com.pojo;

public class Employee extends Person {
	
	private int empId;
	private double empSalary;
	
	public Employee() {
		empId = 0;
		empSalary = 1000d;
	}

	public Employee(int empId, double empSalary) {
		super();
		this.empId = empId;
		this.empSalary = empSalary;
	}

	public int getEmpId() {
		return empId;
	}

	public void setEmpId(int empId) {
		this.empId = empId;
	}

	public double getEmpSalary() {
		return empSalary;
	}

	public void setEmpSalary(double empSalary) {
		this.empSalary = empSalary;
	}
	
	public void show() {
		System.out.println("Employee ID: " + empId + "\tSalary: " + empSalary);
	}

}
